@model MekinaWebsite.Models.RoleCreateModel

@{
    ViewData["Title"] = "Create New Role";
}

<div class="card bg-light border" style="height:500px;">
<article class="card-body mx-auto" style="max-width: 400px;margin-top:50px;">
	<h4 class="card-title mt-3 text-center">Register a new user</h4>
    <form method="post">
<div class="form-group input-group text-danger" asp-validation-summary="All">
    <div class="form-group input-group">
		<div class="input-group-prepend">
		    <span class="input-group-text"></span>
		 </div>       
         <input asp-for="RoleName" placeholder="Please enter a role" class="form-control"/>
         <br/>
     </div>  
    <div class="form-group">
        <button type="submit" class="btn btn-primary" style="width:auto"> Create </button>
    </div>   
</div>
</form>

</article>
</div>