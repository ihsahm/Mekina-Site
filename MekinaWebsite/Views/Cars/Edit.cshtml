@model CarsList

@{
	ViewData["Title"] = "Edit";
	Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card bg-light">
	<article class="card-body mx-auto" style="max-width: 400px;">
		<h4 class="card-title mt-3 text-center">Add a new car</h4>
		<form action="/cars/edit/@Model.CarId" method="post">			
<div class="form-group input-group text-danger" asp-validation-summary="All">
			<div class="form-group input-group">
				<div class="input-group-prepend">
					<span class="input-group-text"></span>
				</div>
				<input asp-for="CarName" class="form-control" value="@Model.CarName" />
				<span class="text-danger" asp-validation-for="CarName"></span>
			</div>
			<div class="form-group input-group">
				<div class="input-group-prepend">
					<span class="input-group-text"> </span>
				</div>
				
				<input asp-for="Price" class="form-control" value="@Model.Price"  />
				<span class="text-danger" asp-validation-for="Price"></span>
			</div>
			<div class="form-group input-group">
				<div class="input-group-prepend">
					<span class="input-group-text"></span>
				</div>
				<select class="custom-select" style="max-width: 120px;">
					<option selected="">+251</option>
				</select>				
				<input asp-for="PhoneNumber" class="form-control" value="@Model.PhoneNumber"  />
				<span class="text-danger" asp-validation-for="PhoneNumber"></span>
			</div>
			<div class="form-group input-group">
				<div class="input-group-prepend">
					<span class="input-group-text"></span>
				</div>
				<select class="form-control" id="CarStatus" name="CarStatus">
					<option selected="" value="@Model.CarStatus"> Select car status</option>
					<option>Used</option>
					<option>New</option>
				</select>
			</div>
			<div class="form-group input-group">
				<div class="input-group-prepend">
					<span class="input-group-text"></span>
				</div>
				<select class="form-control" id="Transmission" name="Transmission">
					<option selected="" value="@Model.Transmission"> Select transmission type</option>
					<option>Automatic</option>
					<option>Manual</option>
				</select>
			</div>
			<div class="form-group input-group">
				<div class="input-group-prepend">
					<span class="input-group-text"></span>
				</div>				
				<input asp-for="Mileage" class="form-control" value="@Model.Mileage" />
				<span class="text-danger" asp-validation-for="Mileage"></span>
			</div>
			<div class="form-group input-group">
				<div class="form-group input-group">
					<div class="input-group-prepend">
						<span class="input-group-text"> </span>
					</div>
					<input type="date" class="form-control" id="CarYear" name="CarYear" value="@Model.CarYear.Value.ToString("yyyy-MM-dd")" >
				</div>
			</div>
			<div class="form-group input-group">
				<div class="form-group input-group">
					<div class="input-group-prepend">
						<span class="input-group-text"> </span>
					</div>				
				<input asp-for="CarImage" class="form-control" value="@Model.CarImage"/>
				<span class="text-danger" asp-validation-for="CarImage"></span>
			</div>
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-primary btn-block"> Update  </button>
			</div>
			</div>
		</form>
	</article>
</div> 