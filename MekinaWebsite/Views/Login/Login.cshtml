@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="card bg-light border">
<article class="card-body mx-auto" style="max-width: 400px;">
	<h4 class="card-title mt-3 text-center">Login</h4>
    <form method="post">
        <div asp-validation-summary="All" class="form-group input-group text-danger">
    <div class="form-group input-group">
		<div class="input-group-prepend">
		    <span class="input-group-text"></span>
		</div>  
        <input asp-for="Email" class="form-control" placeholder="Enter an email"/>
    </div>
    <div class="form-group input-group">
    	<div class="input-group-prepend">
		    <span class="input-group-text"> </span>
		 </div>        
    <input asp-for="Password" class="form-control" placeholder="Enter a password" />
    </div>    
    <br />
    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block"> Login  </button>
    </div>   
</div>
</form>

</article>
</div>